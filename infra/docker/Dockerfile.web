FROM node:22-slim AS builder

WORKDIR /app

# Copy package files and install dependencies
COPY web/package.json web/package-lock.json* ./
RUN npm install --production=false

# Copy source and config
COPY web/tsconfig.json web/vite.config.ts web/tailwind.config.js web/postcss.config.js web/index.html ./
COPY web/src/ ./src/
COPY web/public/ ./public/

# Vite env vars (baked in at build time)
ARG VITE_SKIP_GREEN_ROOM=false
ENV VITE_SKIP_GREEN_ROOM=$VITE_SKIP_GREEN_ROOM

# Build
RUN npm run build

# ─── Production stage (static files served by nginx) ──────────
FROM nginx:alpine

ARG NGINX_CONF=infra/docker/nginx.conf

COPY --from=builder /app/dist /usr/share/nginx/html
COPY ${NGINX_CONF} /etc/nginx/conf.d/default.conf

EXPOSE 80
